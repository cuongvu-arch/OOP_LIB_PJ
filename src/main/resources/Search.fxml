<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controller.Book.Search" spacing="10" alignment="TOP_CENTER"
      style="-fx-padding: 20; -fx-background-color: #f5f5f5;">

    <Label text="Tìm kiếm sách bằng ISBN" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Nhập ISBN:" style="-fx-font-weight: bold;"/>
        <TextField fx:id="isbnTextField" promptText="Ví dụ: 9780747532743" style="-fx-pref-width: 200px;"/>
        <Button fx:id="searchButton" text="Tìm kiếm" onAction="#handleSearchButtonClick"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;"/>
    </HBox>

    <TextArea fx:id="resultTextArea" editable="false" wrapText="true"
              style="-fx-pref-height: 200px; -fx-pref-width: 500px; -fx-font-family: monospace;"/>

    <ImageView fx:id="bookImageView"
               fitWidth="200"
               fitHeight="300"
               preserveRatio="true"/>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="addBookButton" text="Thêm sách" onAction="#handleAddBookButtonClick"
                style="-fx-background-color: #2196F3; -fx-text-fill: white;"/>
        <Button fx:id="updateBookButton" text="Cập nhật" onAction="#handleUpdateBookButtonClick"
                style="-fx-background-color: #FF9800; -fx-text-fill: white;"/>
        <Button fx:id="deleteBookButton" text="Xóa sách" onAction="#handleDeleteBookButtonClick"
                style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
    </HBox>
</VBox>
