<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.LibrarianToEditController">
   <stylesheets>
      <URL value="@../css/styles.css" />
   </stylesheets>

   <center>
      <AnchorPane style="-fx-padding: 20;">
         <children>
            <VBox spacing="20.0" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
               <Label styleClass="subtitle" text="Trang chủ >> Thủ thư >> Quản lý sách"/>

               <Label text="Quản lý kho sách" styleClass="title"/>

               <TableView fx:id="bookTable" prefHeight="400.0">
                  <columns>
                     <TableColumn fx:id="isbnColumn" text="ISBN" prefWidth="120"/>
                     <TableColumn fx:id="titleColumn" text="Tiêu đề" prefWidth="250"/>
                     <TableColumn fx:id="quantityColumn" text="Tổng SL" prefWidth="80"/>
                     <TableColumn fx:id="borrowedColumn" text="Đang mượn" prefWidth="80"/>
                     <TableColumn fx:id="availableColumn" text="Còn lại" prefWidth="80"/>
                  </columns>
               </TableView>

               <HBox spacing="10" alignment="CENTER_LEFT">
                  <Label text="Nhập ISBN:"/>
                  <TextField fx:id="adjustIsbnField" prefWidth="150"/>
                  <Label text="Thêm/Bớt SL:"/>
                  <TextField fx:id="adjustQuantityField" prefWidth="80"/>
                  <Button fx:id="adjustButton" text="Cập nhật số lượng" styleClass="button"/>
               </HBox>
            </VBox>
         </children>
      </AnchorPane>
   </center>
</BorderPane>
