<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="70.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.NavBarController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <HBox alignment="CENTER_LEFT" layoutX="0.0" layoutY="0.0" prefHeight="70.0" prefWidth="800.0" spacing="20" style="-fx-background-color: #2c3e50; -fx-padding: 0 20;">
        <children>
            <Label styleClass="nav-brand" onMouseClicked="#home" text="ThienDiaSach">
                <font>
                    <Font name="Calibri Light" size="20.0" />
                </font>
            </Label>
            <Label styleClass="nav-item" onMouseClicked="#searching" text="Tra cứu" />
            <Label styleClass="nav-item" onMouseClicked="#profile" text="Cá nhân" />
            <Label styleClass="nav-item" onMouseClicked="#follow" text="Sách theo dõi" />
            <Label styleClass="nav-item" onMouseClicked="#history" text="Lịch sử" />
            <Label styleClass="nav-item" onMouseClicked="#handleSearchButtonClick" text="Tìm kiếm" />
            <Label styleClass="nav-item" fx:id="adminFunctionText" onMouseClicked="#ToAdminScene" text="Thủ thư" />
        </children>
    </HBox>
</AnchorPane>