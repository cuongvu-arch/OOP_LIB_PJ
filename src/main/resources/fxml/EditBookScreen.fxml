<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="680.0" prefWidth="700.0"
            style="-fx-background-color: #f4f4f4;" xmlns="http://javafx.com/javafx/17"
            fx:controller="Controller.EditBookController">
    <children>
        <ScrollPane fitToHeight="true" fitToWidth="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <content>
                <VBox alignment="TOP_CENTER" spacing="15.0"
                      style="-fx-background-color: white; -fx-border-color: #e0e0e0; -fx-border-width: 1px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 5);">
                    <padding>
                        <Insets bottom="20.0" left="30.0" right="30.0" top="20.0"/>
                    </padding>
                    <children>
                        <Label text="CHỈNH SỬA THÔNG TIN SÁCH">
                            <font>
                                <Font name="Arial Bold" size="20.0"/>
                            </font>
                            <VBox.margin>
                                <Insets bottom="10.0"/>
                            </VBox.margin>
                        </Label>
                        <ImageView fx:id="bookCoverImageView" fitHeight="200.0" fitWidth="130.0" pickOnBounds="true"
                                   preserveRatio="true"
                                   style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 8, 0, 0, 2);"/>
                        <GridPane hgap="10.0" vgap="8.0" maxWidth="Infinity">
                            <columnConstraints>
                                <ColumnConstraints hgrow="NEVER" minWidth="100.0" prefWidth="120.0"/>
                                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="80.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label text="ISBN:" style="-fx-font-weight: bold;"/>
                                <TextField fx:id="isbnTextField" editable="false" style="-fx-background-color: #eeeeee;"
                                           GridPane.columnIndex="1"/>
                                <Label text="Tiêu đề:" style="-fx-font-weight: bold;" GridPane.rowIndex="1"/>
                                <TextField fx:id="titleTextField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                <Label text="Tác giả (,) :" style="-fx-font-weight: bold;" GridPane.rowIndex="2"/>
                                <TextField fx:id="authorsTextField" promptText="Ngăn cách bởi dấu phẩy"
                                           GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                <Label text="Nhà xuất bản:" style="-fx-font-weight: bold;" GridPane.rowIndex="3"/>
                                <TextField fx:id="publisherTextField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                                <Label text="Ngày XB:" style="-fx-font-weight: bold;" GridPane.rowIndex="4"/>
                                <TextField fx:id="publishDateTextField" promptText="YYYY-MM-DD hoặc YYYY"
                                           GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                                <Label text="URL Ảnh bìa:" style="-fx-font-weight: bold;" GridPane.rowIndex="5"/>
                                <TextField fx:id="thumbnailUrlTextField" GridPane.columnIndex="1"
                                           GridPane.rowIndex="5"/>
                                <Label text="Mô tả:" style="-fx-font-weight: bold;" GridPane.rowIndex="6"/>
                                <TextArea fx:id="descriptionTextArea" prefHeight="100.0" wrapText="true"
                                          GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                            </children>
                        </GridPane>
                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                            <children>
                                <!-- THAY ĐỔI MÀU Ở ĐÂY -->
                                <Button fx:id="saveButton" mnemonicParsing="false" onAction="#handleSaveButtonClick"
                                        style="-fx-background-color: #4DB6AC; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"
                                        text="Lưu thay đổi"/>
                                <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancelButtonClick"
                                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"
                                        text="Hủy"/>
                            </children>
                            <VBox.margin>
                                <Insets top="10.0"/>
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>