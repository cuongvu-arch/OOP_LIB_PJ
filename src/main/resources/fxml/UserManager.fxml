<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="Controller.UserFormController" prefWidth="400" prefHeight="200"
            stylesheets="@../css/styles.css">
    <children>
        <GridPane layoutX="30" layoutY="30" hgap="10" vgap="15">
            <children>
                <Label text="Họ và tên:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nameField" promptText="Nhập họ và tên"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            </children>
        </GridPane>

        <HBox layoutX="100" layoutY="120" spacing="15">
            <children>
                <Button fx:id="saveButton" text="Lưu" styleClass="primary-button"/>
                <Button fx:id="cancelButton" text="Hủy" styleClass="secondary-button"/>
            </children>
        </HBox>
    </children>
</AnchorPane>
