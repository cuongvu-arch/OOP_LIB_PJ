                <TableView stylesheets="@../css/table-style.css" fx:id="historyTable" prefHeight="400" prefWidth="760">
                    <columns>
                        <TableColumn fx:id="bookNameColumn" prefWidth="189.59997367858887" text="Tên sách"/>
                        <TableColumn fx:id="borrowDateColumn" prefWidth="160.0" text="Ngày mượn"/>
                        <TableColumn fx:id="returnDateColumn" prefWidth="139.20004272460938" text="Ngày trả"/>
                        <TableColumn fx:id="statusColumn" prefWidth="133.59988403320312" text="Trạng thái"/>
                        <TableColumn fx:id="remainingDaysColumn" prefWidth="136.0" text="Số ngày còn lại "/>
                    </columns>
                </TableView>
            </VBox>
        </VBox>
    </center>
</BorderPane>
