<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controller.HistoryScreenController">
   <center>
      <VBox spacing="20" alignment="TOP_CENTER" style="-fx-padding: 30;">
         <Label text="Trang chủ >> Lịch sử"
                style="-fx-font-size: 14px; -fx-text-fill: #666;" />

         <VBox spacing="15" styleClass="card" maxWidth="800" style="-fx-background-color: #f4f4f4; -fx-background-radius: 8; -fx-padding: 20;">
            <Label text="Lịch sử mượn sách và trả sách"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <TableView fx:id="historyTable" prefHeight="400" prefWidth="760">
               <columns>
                  <TableColumn fx:id="bookNameColumn" text="Tên sách" prefWidth="200"/>
                  <TableColumn fx:id="borrowDateColumn" text="Ngày mượn" prefWidth="150"/>
                  <TableColumn fx:id="returnDateColumn" text="Ngày trả" prefWidth="150"/>
                  <TableColumn fx:id="statusColumn" text="Trạng thái" prefWidth="150"/>
               </columns>
            </TableView>
         </VBox>
      </VBox>
   </center>
</BorderPane>
