<BorderPane stylesheets="@../css/styles.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1"
            fx:controller="Controller.HistoryScreenController">
    <center>
        <VBox alignment="TOP_CENTER" spacing="20" style="-fx-padding: 30;">

            <VBox maxWidth="800" spacing="15"
                  style="-fx-background-color: #f4f4f4; -fx-background-radius: 8; -fx-padding: 20;" styleClass="card">
                <Label style="-fx-font-size: 14px; -fx-text-fill: #666;" text="Trang chủ &gt;&gt; Lịch sử"/>
