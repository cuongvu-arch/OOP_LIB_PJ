<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <AnchorPane style="-fx-padding: 20;">
         <children>
            <Label styleClass="subtitle" layoutX="20.0" layoutY="20.0" text="Trang chủ &gt;&gt; Theo dõi"/>

            <FlowPane layoutX="20.0" layoutY="60.0" hgap="20" vgap="30" prefWidth="700.0">
               <children>
                  <!-- Book 1 -->
                  <VBox styleClass="card" spacing="10" alignment="TOP_CENTER" prefWidth="150.0">
                     <children>
                        <ImageView fitHeight="180.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../image/img.png" />
                           </image>
                        </ImageView>
                        <Label text="Truyện tranh 1" style="-fx-font-weight: bold; -fx-text-alignment: center;"/>
                        <Label text="Trả sách" style="-fx-text-fill: -fx-accent-color; -fx-font-weight: bold; -fx-cursor: hand;"/>
                     </children>
                  </VBox>

                  <!-- Book 2 -->
                  <VBox styleClass="card" spacing="10" alignment="TOP_CENTER" prefWidth="150.0">
                     <children>
                        <ImageView fitHeight="180.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../image/img.png" />
                           </image>
                        </ImageView>
                        <Label text="Truyện tranh 2" style="-fx-font-weight: bold; -fx-text-alignment: center;"/>
