                     <children>
                        <ImageView fitHeight="180.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../image/img.png" />
                           </image>
                        </ImageView>
                        <Label text="Truyện tranh 3" style="-fx-font-weight: bold; -fx-text-alignment: center;"/>
                        <Label text="Trả sách" style="-fx-text-fill: -fx-accent-color; -fx-font-weight: bold; -fx-cursor: hand;"/>
                     </children>
                  </VBox>
               </children>
            </FlowPane>
         </children>
      </AnchorPane>
   </center>
</BorderPane>