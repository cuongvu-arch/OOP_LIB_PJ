<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="Controller.SearchingScreenController">
   <center>
      <VBox styleClass="card" spacing="20" style="-fx-padding: 20;">
         <Label styleClass="subtitle" text="Trang chủ &gt;&gt; Tìm kiếm nâng cao"/>

         <HBox spacing="15" alignment="CENTER_LEFT">
            <DatePicker styleClass="filter-control" promptText="Ngày/Tháng/Năm"/>
            <TextField styleClass="filter-control" promptText="Tên tác phẩm" prefWidth="250.0"/>
         </HBox>

         <Label text="Thể loại sách" styleClass="subtitle"/>

         <GridPane hgap="15" vgap="15">
            <columnConstraints>
               <ColumnConstraints prefWidth="200.0" halignment="CENTER"/>
               <ColumnConstraints prefWidth="200.0" halignment="CENTER"/>
               <ColumnConstraints prefWidth="200.0" halignment="CENTER"/>
            </columnConstraints>

            <rowConstraints>
               <RowConstraints prefHeight="40.0"/>
               <RowConstraints prefHeight="40.0"/>
            </rowConstraints>

            <!-- Hàng 1 -->
            <VBox alignment="CENTER" spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
               <Label text="Kinh tế" styleClass="genre-label"/>
               <ChoiceBox fx:id="economicGenre" prefWidth="150.0"/>
            </VBox>

            <VBox alignment="CENTER" spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
               <Label text="Xã hội" styleClass="genre-label"/>
               <ChoiceBox fx:id="socialGenre" prefWidth="150.0"/>
            </VBox>

            <VBox alignment="CENTER" spacing="5" GridPane.columnIndex="2" GridPane.rowIndex="0">
               <Label text="Chính trị" styleClass="genre-label"/>
               <ChoiceBox fx:id="politicalGenre" prefWidth="150.0"/>
            </VBox>

            <!-- Hàng 2 -->
            <VBox alignment="CENTER" spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
               <Label text="Ngôn tình" styleClass="genre-label"/>
               <ChoiceBox fx:id="romanceGenre" prefWidth="150.0"/>
            </VBox>

            <VBox alignment="CENTER" spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <Label text="Kiếm hiệp" styleClass="genre-label"/>
               <ChoiceBox fx:id="martialArtsGenre" prefWidth="150.0"/>
            </VBox>

            <VBox alignment="CENTER" spacing="5" GridPane.columnIndex="2" GridPane.rowIndex="1">
               <Label text="Tu tiên" styleClass="genre-label"/>
               <ChoiceBox fx:id="fantasyGenre" prefWidth="150.0"/>
            </VBox>
         </GridPane>

         <Button text="Tìm kiếm" styleClass="button" style="-fx-font-size: 16px; -fx-pref-width: 200.0;" alignment="CENTER">
            <VBox.margin>
               <Insets top="20.0"/>
            </VBox.margin>
         </Button>
      </VBox>
   </center>
</BorderPane>