<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.BookBrowseController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label minWidth="100" text="Tên sách:" />
                <TextField fx:id="titleField" promptText="Nhập tên sách" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label minWidth="100" text="Tác giả:" />
                <TextField fx:id="authorField" promptText="Nhập tên tác giả" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label minWidth="100" text="Ngày xuất bản:" />
                <TextField fx:id="publishDateField" promptText="YYYY hoặc YYYY-MM hoặc YYYY-MM-DD" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label minWidth="100" text="ISBN:" />
            <TextField fx:id="isbnField" promptText="Nhập ISBN" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
        <HBox alignment="CENTER">
            <Button fx:id="searchButton" onAction="#handleSearchButtonClick" prefWidth="150" style="-fx-background-color: #4DB6AC; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;" text="Tìm kiếm" />
        </HBox>

        <ScrollPane fitToWidth="true" prefViewportHeight="300" VBox.vgrow="ALWAYS">
            <content>
                <FlowPane fx:id="booksFlowPane" alignment="TOP_LEFT" hgap="10" prefWrapLength="650.0" style="-fx-padding: 5;" vgap="10">
                </FlowPane>
            </content>
        </ScrollPane>

        <TextArea fx:id="resultTextArea" editable="false" prefHeight="150" wrapText="true" VBox.vgrow="SOMETIMES" />
    </children>
</VBox>
