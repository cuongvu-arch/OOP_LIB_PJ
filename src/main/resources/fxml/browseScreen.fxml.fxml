<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" style="-fx-background-color: #DCE1C8" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.BookBrowseController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label minWidth="100" prefHeight="27.0" prefWidth="135.0" styleClass="title" text="Tên sách:" />
                <TextField fx:id="titleField" promptText="Nhập tên sách" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label minWidth="100" prefHeight="27.0" prefWidth="136.0" styleClass="title" text="Tác giả:" />
                <TextField fx:id="authorField" prefHeight="30.0" prefWidth="489.0" promptText="Nhập tên tác giả" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label minWidth="100" prefHeight="27.0" prefWidth="135.0" styleClass="title" text="Ngày xuất bản:" />
                <TextField fx:id="publishDateField" promptText="YYYY hoặc YYYY-MM hoặc YYYY-MM-DD" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label minWidth="100" prefHeight="27.0" prefWidth="136.0" styleClass="title" text="ISBN:" />
            <TextField fx:id="isbnField" promptText="Nhập ISBN" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
        <HBox alignment="CENTER">
            <Button fx:id="searchButton" onAction="#handleSearchButtonClick" prefWidth="150" styleClass="button" text="Tìm kiếm" />
        </HBox>

        <ScrollPane fitToWidth="true" prefViewportHeight="300" styleClass="outer-pane" VBox.vgrow="ALWAYS">
            <content>
                <FlowPane fx:id="booksFlowPane" hgap="10" prefHeight="600.0" prefWidth="614.0" style="-fx-padding: 5;" styleClass="pane-color" vgap="10">
                </FlowPane>
            </content>
        </ScrollPane>
    </children>
</VBox>
