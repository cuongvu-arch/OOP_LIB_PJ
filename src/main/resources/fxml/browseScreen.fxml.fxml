<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" spacing="10" xmlns="http://javafx.com/javafx/8"
      fx:controller="Controller.BookBrowseController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label text="Tên sách:" minWidth="100"/>
                <TextField fx:id="titleField" promptText="Nhập tên sách" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label text="Tác giả:" minWidth="100"/>
                <TextField fx:id="authorField" promptText="Nhập tên tác giả" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label text="Ngày xuất bản:" minWidth="100"/>
                <TextField fx:id="publishDateField" promptText="YYYY hoặc YYYY-MM hoặc YYYY-MM-DD" HBox.hgrow="ALWAYS"/>
            </children>
        </HBox>
        <HBox alignment="CENTER">
            <Button fx:id="searchButton" text="Tìm kiếm" onAction="#handleSearchButtonClick" prefWidth="150"
                    style="-fx-background-color: #4DB6AC; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
        </HBox>

        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" prefViewportHeight="300">
            <content>
                <FlowPane fx:id="booksFlowPane" hgap="10" vgap="10" prefWrapLength="650.0" alignment="TOP_LEFT"
                          style="-fx-padding: 5;">
                </FlowPane>
            </content>
        </ScrollPane>

        <TextArea fx:id="resultTextArea" editable="false" wrapText="true" prefHeight="150" VBox.vgrow="SOMETIMES"/>
    </children>
</VBox>