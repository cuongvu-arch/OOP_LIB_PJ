<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import java.net.URL?>
<VBox stylesheets="@../css/styles.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1"
      fx:controller="Controller.BookSearchController" spacing="20" alignment="TOP_CENTER"
      style="-fx-padding: 30; -fx-background-color: #f5f5f5;">

    <stylesheets>
        <URL value="@../css/styles.css"/>
    </stylesheets>

    <Label text="Tìm kiếm sách" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: -fx-dark-color;"/>

    <HBox spacing="15" alignment="CENTER">
        <Label text="Nhập ISBN:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
        <TextField fx:id="isbnTextField" promptText="Ví dụ: 9780747532743" style="-fx-pref-width: 250px;"/>
        <Button fx:id="searchButton" text="Tìm kiếm" onAction="#handleSearchButtonClick" styleClass="button"/>
    </HBox>

    <HBox spacing="30" alignment="CENTER">
        <VBox spacing="15" alignment="TOP_CENTER" style="-fx-padding: 20;">
            <TextArea fx:id="resultTextArea" editable="false" wrapText="true"
                      style="-fx-pref-height: 300px; -fx-pref-width: 400px; -fx-font-family: 'Arial'; -fx-font-size: 14px;"/>

            <HBox spacing="15" alignment="CENTER">
                <Button fx:id="addBookButton" text="Thêm sách" onAction="#handleAddBookButtonClick"
                        styleClass="button"/>
                <Button fx:id="updateBookButton" text="Cập nhật" onAction="#handleUpdateBookButtonClick"
                        styleClass="button" style="-fx-background-color: #FF9800;"/>
                <Button fx:id="deleteBookButton" text="Xóa sách" onAction="#handleDeleteBookButtonClick"
                        styleClass="button-danger"/>
            </HBox>
        </VBox>

        <ImageView fx:id="bookImageView" fitWidth="250" fitHeight="350" preserveRatio="true"
                   style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);"/>
    </HBox>
</VBox>