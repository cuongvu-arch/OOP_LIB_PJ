<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12"
            fx:controller="Controller.HomePageScreenController" style="-fx-padding: 20;"
            stylesheets="@../css/homepage.css">
    <center>
        <ScrollPane fitToWidth="true">
            <GridPane fx:id="booksGrid" style="-fx-padding: 10; -fx-hgap: 20; -fx-vgap: 20;">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="300.0" minWidth="200.0" prefWidth="250.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="300.0" minWidth="200.0" prefWidth="250.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="300.0" minWidth="200.0" prefWidth="250.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="300.0" prefHeight="350.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="300.0" prefHeight="350.0" vgrow="SOMETIMES"/>
                </rowConstraints>
            </GridPane>
        </ScrollPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 10;">
            <Button fx:id="prevButton" text="Trang trước" style="-fx-font-size: 14;"/>
            <Label fx:id="pageLabel" text="Trang 1" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
            <Button fx:id="nextButton" text="Trang sau" style="-fx-font-size: 14;"/>
        </HBox>
    </bottom>
</BorderPane>