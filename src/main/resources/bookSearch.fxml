<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_CENTER" spacing="15" style="-fx-padding: 30; -fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Book.Search">

    <!-- Header -->
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2a5885;" text="Tìm Kiếm Sách" textAlignment="CENTER" />

    <!-- Search Box -->
    <HBox alignment="CENTER" spacing="10">
        <Label style="-fx-font-weight: bold; -fx-min-width: 50;" text="ISBN:" />
        <TextField fx:id="isbnTextField" promptText="Nhập mã ISBN..." style="-fx-pref-width: 250px;" />
        <Button onAction="#handleSearchButtonClick" style="-fx-base: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" text="Tìm kiếm" />
    </HBox>

    <!-- Results Area -->
    <VBox spacing="5" style="-fx-padding: 10 0 0 0;">
        <Label style="-fx-font-weight: bold;" text="KẾT QUẢ:" />
        <TextArea fx:id="resultTextArea" editable="false" style="-fx-font-family: 'Arial';                         -fx-font-size: 14px;                         -fx-pref-height: 200px;                         -fx-pref-width: 400px;                         -fx-border-color: #ddd;                         -fx-border-radius: 5;" wrapText="true" />
    </VBox>
   <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="289.0" text="Thêm sách" textAlignment="CENTER" />
   <Button mnemonicParsing="false" text="Xóa sách" />
   <Button mnemonicParsing="false" text="Sửa sách" />

    <!-- Footer Note -->
    <Label style="-fx-font-style: italic; -fx-text-fill: #666;" text="Hệ thống kết nối với cơ sở dữ liệu sách trực tuyến" />
</VBox>
